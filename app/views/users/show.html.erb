<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
    </div> 
    
    <div class="col-md-6">
      <h1> <%= @user.profile.first_name %> </h1>
      <h1> <%= @user.profile.last_name %> </h1>
      <h3><span class="job-title-icon"> <%= job_title_icon%> </span> <%= @user.profile.job_title %> </h3>
      
      <div class="well profile-block profile-description">
        <h3>Description</h3>
        <%= @user.profile.description %>
      </div>
     
        <% if current_user.plan.id == 1 %>
          <div class="well profile-block profile-contact">
            <h3>Contact information</h3>
            Phone: <%= @user.profile.phone_number %>  <br>
            Email: <%= @user.profile.contact_email %><br>
          </div>
        <% end %>
    </div>
  </div>
</div>